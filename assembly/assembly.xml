<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>seeko-assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>seeko</baseDirectory>
    <!-- Need the base directory in the ZIP file -->
    <includeBaseDirectory>true</includeBaseDirectory>

    <!-- Assembly the contents in bin folder -->
    <fileSets>
        <fileSet>
            <directory>bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.*</include>
                <include>**/*.*</include>
            </includes>
            <directoryMode>0755</directoryMode>
        </fileSet>
    </fileSets>
    <!-- END: Assembly the contents in bin folder -->

    <moduleSets>
        <moduleSet>
            <includes>
                <include>org.seeko:web</include>
            </includes>
            <includeSubModules>true</includeSubModules>
            <binaries>
                <outputFileNameMapping>
                    ${module.artifactId}.${module.extension}
                </outputFileNameMapping>
                <outputDirectory>/lib</outputDirectory>
                <unpack>false</unpack>
                <includeDependencies>true</includeDependencies>
            </binaries>
        </moduleSet>
    </moduleSets>

    <dependencySets>
        <!-- Assembly winstone -->
        <dependencySet>
            <scope>runtime</scope>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <outputDirectory>lib/</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            <!-- The Installer Itself Should NOT Included In The Lib Folder -->
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>net.sourceforge.winstone:winstone:*</include>
            </includes>
            <unpack>false</unpack>
        </dependencySet>
        <!-- END : Assembly winstone -->
    </dependencySets>
</assembly>
